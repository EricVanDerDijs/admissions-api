#!/bin/bash

HOST=""
PORT="3010"
DETACH="-it"
TAG="1"

# Get docker ip addrs
HOST="172.17.0.1"

if [ "$host" != "" ]
then
  HOST=$host
fi

if [ "$port" != "" ]
then
  PORT=$port
fi

if [ "$detach" == "true" ]
then
  echo "Running detached"
  DETACH="-d"
fi

if [ "$tag" != "" ]
then
  TAG=$tag
fi

echo "Mapped to port: $PORT"

docker run \
  $DETACH \
  -p $PORT:80 \
  -e HOST=$HOST \
  -e PORT=$PORT \
  --mount source=api-volume-$TAG,destination=/app/storage admissions-api